<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/bluetoothdialog_custom"
    android:layout_margin="10dp"
    android:layout_gravity="center"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="1"
        android:gravity="center"

        android:background="@color/xanhduongnhat"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:text="Giao Diện Kết Nối Cảm Biến"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:background="@color/xam"
        android:orientation="vertical"
        android:layout_weight="9"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:text="Các thiết bị được kết nối"
            android:background="@color/bac"
            android:textSize="12sp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ListView
            android:id="@+id/listviewTbdaketnoi"
            android:background="#fff"
            android:dividerHeight="1.0dp"
            android:divider="@color/xanhduongnhat"
            android:minHeight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Chọn một thiết bị không dây để kết nối"
                    android:background="@color/bac"
                    android:textSize="12sp"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ProgressBar
                    android:layout_gravity="right"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_margin="5dp" />
            </FrameLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/listviewTbcotheketnoi"
            android:background="#fff"
            android:minHeight="20dp"
            android:dividerHeight="1.0dp"
            android:divider="@color/xanhduongnhat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>