<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:gravity="center"
    android:weightSum="10"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/textviewTenCambien_fragmentGauge"
        android:text="Cảm Biến"
        android:textColor="@color/xanhdam"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <com.github.anastr.speedviewlib.SpeedView
        android:id="@+id/halfgauge"
        android:layout_weight="9"
        app:sv_minSpeed="0"
        app:sv_maxSpeed="200"
        app:sv_withTremble="false"
        app:sv_unitTextSize="20sp"
        app:sv_speedometerWidth="20dp"
        app:sv_speedometerColor="#FF0000"
        android:layout_width="wrap_content"
        android:layout_height="0dp"/>
</LinearLayout>